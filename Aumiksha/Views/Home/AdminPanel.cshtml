@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <title>Admin Panel</title>
</head>
<body>
    <h1 class="px-5 py-3">Admin Dashboard</h1>
    <p class="px-5" >Welcome,Admin <span><a asp-action="Logout">Logout</a></span></p>
    <hr>
    <div class="container">
        <h3>Feedback Details</h3>
        <hr>
        <table class="border table-bordered">
            <tr class="bg-secondary text-white">
                <th class="p-2">Name</th>
                <th class="p-2">Email</th>
                <th class="p-2">Number</th>
                <th class="p-2">Feedback</th>
                <th class="p-2">Delete</th>
            </tr>
              @foreach(var data in Model)
            {
                <tr>
                    <td class="p-2">@data.name</td>
                    <td class="p-2">@data.email</td>
                    <td  class="p-2">@data.number</td>
                    <td class="p-2">@data.query</td>
                    <td><a asp-action="Delete" class="btn btn-danger" asp-route-id="@data.id" onclick="return confirm('Are you sure want to delete?')">Delete</a></td>
                </tr>
            }
        </table>
    </div>
    <script>
    // Prevent going back to the login page after logout
    window.history.pushState(null, '', window.location.href);
    window.onpopstate = function () {
        window.history.pushState(null, '', window.location.href);
    };
</script>

</body>
</html>